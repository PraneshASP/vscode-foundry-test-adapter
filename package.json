{
  "name": "vscode-foundry-test-adapter",
  "displayName": "Foundry Test Explorer",
  "description": "Run your Foundry tests in the Sidebar of Visual Studio Code",
  "icon": "img/icon.png",
  "author": "PraneshASP <praneshas2000@gmail.com>",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://github.com/hbenl/vscode-example-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/hbenl/vscode-example-test-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/hbenl/vscode-example-test-adapter/issues"
  },
  "categories": [
    "Testing"
  ],
  "keywords": [
    "Solidity",
    "Foundry",
    "EVM"
  ],
  "main": "out/main.js",
  "scripts": {
    "clean": "rimraf out *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "vscode-test-adapter-api": "^1.7.0",
    "vscode-test-adapter-util": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/vscode": "~1.23.0",
    "typescript": "^3.5.3",
    "vsce": "^1.95.1"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Foundry Test Explorer configuration",
      "properties": {
        "foundryTestExplorer.logpanel": {
          "description": "write diagnotic logs to an output panel",
          "type": "boolean",
          "scope": "resource"
        },
        "foundryTestExplorer.logfile": {
          "description": "write diagnostic logs to the given file",
          "type": "string",
          "scope": "resource"
        }
      }
    }
  }
}
